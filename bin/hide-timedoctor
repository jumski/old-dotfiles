#!/bin/bash

window_id=$(xdotool search --name TaskInformer2)

case "$1" in
  laptop)
    screen_width=$(( 1366 + 200 ))
    screen_height=768
  ;;
  tauzen)
    screen_width=1920
    screen_height=1080
  ;;
  podzamcze)
    screen_width=1680
    screen_height=1200
  ;;
  *)
    echo "Dont know size '$1'. Only laptop|tauzen|podzamcze sizes available"
    exit 1
esac

if [[ -n "$window_id" ]]; then
  x_position=$(( $screen_width / 2 ))
  y_position=$(( $screen_height - 17 ))
  width=80
  height=20

  xdotool windowmove $window_id $x_position $y_position
  xdotool windowsize --sync $window_id $width $height
fi
